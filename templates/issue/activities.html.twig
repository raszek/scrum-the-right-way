<div class="card" data-controller="toggle">
    <div class="card-header d-flex justify-content-between align-items-center">
        Activities
        <button data-toggle-target="button"
                data-action="toggle#toggle"
                class="btn btn-primary"
        >
            <i class="bi bi-eye"></i>
        </button>
    </div>
    <div data-controller="issue-events"
         data-issue-events-url-value="{{ path('app_project_issue_view_events', {
             id: project.id,
             issueCode: issue.code
         }) }}"
         id="issue-events"
         data-toggle-target="item"
         class="card-body d-none"
    >
        <div data-issue-events-target="container">

        </div>

        <div data-issue-events-target="loader"
             style="display: flex; justify-content: center;"
        >
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>
