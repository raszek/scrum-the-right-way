<li class="list-group-item d-flex justify-content-between align-items-center gap-3"
    data-issue--sub-issue-target="item"
    data-issue--sub-issue-code-param="{{ subIssue.code }}"
    data-issue--sub-issue-remove-url-param="{{ path('app_project_issue_archive', {
        id: project.id,
        issueCode: subIssue.code
    }) }}"
>
    <a href="{{ path('app_project_issue_view', {
        id: project.id,
        issueCode: subIssue.code
    }) }}" target="_blank">
        {{ subIssue.prefixCodeTitle }}
    </a>

    <button class="btn btn-danger"
            data-action="confirm-dialog#open"
            data-confirm-dialog-url-param="{{ subIssue.code }}"
    >
        <i class="bi bi-trash"></i>
    </button>
</li>
