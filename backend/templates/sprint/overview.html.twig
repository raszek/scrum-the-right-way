{% extends 'layout/project_layout.html.twig' %}

{% set page_title = 'Sprint ' ~ sprint.number %}

{% block content %}
    <div>
        <div class="row">
            <div class="col-12">
                {% embed 'common/project_page_header.html.twig' %}
                    {% block buttons %}
                        <form action="{{ path('app_project_sprint_current_finish', {
                            id: project.id
                        }) }}">
                            <button type="submit" class="btn btn-primary">End sprint</button>
                        </form>
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Burndown chart</span>
                        <div>
                            <div data-controller="sprint--end-date"
                                 data-sprint--end-date-title-value="Estimated sprint end date"
                                 data-sprint--end-date-current-value="{{ sprint.estimatedEndDate | date('Y-m-d') }}"
                                 data-sprint--end-date-url-value="{{ path('app_project_sprint_update_estimated_end_date', {
                                     id: project.id
                                 }) }}"
                            >
                                <button class="btn btn-primary"
                                        data-sprint--end-date-target="button"
                                >
                                    {{ sprint.estimatedEndDate | date }}
                                </button>

                                <template data-sprint--end-date-target="template">
                                    <div class="d-flex gap-2">
                                        <input type="date"
                                               class="form-control"
                                               data-sprint--end-date-target="input"
                                               min="{{ 'now' | date('Y-m-d') }}"
                                        >
                                        <button class="btn btn-primary">
                                            <i class="bi bi-save"></i>
                                        </button>
                                    </div>
                                </template>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas data-controller="sprint--burndown-chart"
                                data-sprint--burndown-chart-records-value="{{ chartRecords }}"
                                data-sprint--burndown-chart-start-date-value="{{ sprint.startedAt | date('Y-m-d') }}"
                                data-action="sprint--end-date:modified@window->sprint--burndown-chart#sprintEstimatedEndDateChanged"
                        >
                        </canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Latest done issues
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            {% for sprintGoalIssue in latestDoneIssues %}
                                <li class="list-group-item">
                                    <a href="{{ path('app_project_issue_view', {
                                        id: project.id,
                                        issueCode: sprintGoalIssue.issue.code
                                    }) }}">
                                        {{ sprintGoalIssue.issue.fullText }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
