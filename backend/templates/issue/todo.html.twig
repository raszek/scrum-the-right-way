<form data-controller="issue--todo"
      data-issue--todo-url-value="{{ path('widget_todo_list') }}"
      data-issue--todo-attributes-value="{{ attributes }}"
      data-action="issue--todo#add"
>
    <input type="text"
           class="form-control mb-3"
           placeholder="Add to do"
           data-issue--todo-target="input"
    >

    <ul class="list-group">
        {% for item in state.items %}
            <li class="list-group-item">
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                            {% if item.isDone %}
                                checked
                            {% endif %}
                    >
                    <label class="form-check-label" for="flexCheckDefault">
                        {{ item.task }}
                    </label>
                </div>
            </li>
        {% endfor %}
    </ul>
</form>
