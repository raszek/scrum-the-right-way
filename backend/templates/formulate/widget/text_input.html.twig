<div class="mb-3">
    <label for="{{ id }}" class="form-label">{{ label }}</label>
    <input type="{{ type }}"
           name="{{ name }}"
           class="form-control {{ error ? 'is-invalid' : '' }}"
           id="{{ id }}"
           value="{{ value }}"
    >
    {% if error %}
        <div class="invalid-feedback">
            {{ error.message() }}
        </div>
    {% endif %}
</div>
