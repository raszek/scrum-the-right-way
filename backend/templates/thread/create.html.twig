{% extends 'layout/project_layout.html.twig' %}

{% set page_title = 'Create thread' %}

{% block content %}
    {% include 'common/project_page_header.html.twig' with {
        'links': [
            {
                label: 'Threads',
                url: path('app_project_thread_list', {id: project.id})
            }
        ]
    } %}

    <div class="row">
        <div data-controller="editor" class="col-12">
            {{ form_start(form, {
                attr: {
                    'data-action': 'editor#submitForm'
                }
            }) }}

            {{ form_row(form.title, {
                label: false,
                attr: {
                    placeholder: 'Title',
                    class: 'form-control-lg'
                }
            }) }}

            <div class="mt-3">
                <div data-editor-target="container"></div>
                {{ form_errors(form.message) }}
            </div>

            {{ form_row(form.message, {
                attr: {
                    'data-editor-target': 'hidden'
                }
            }) }}

            <input type="submit" class="btn btn-primary mt-3" value="Create">

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
